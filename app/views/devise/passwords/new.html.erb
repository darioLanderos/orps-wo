<%= content_for(:title, "Forgot your password?") %>

<p><span class="help-block">Please provide us your email address and will look into our database and try to help you.</span></p>
<br/>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form' }) do |f| %>
  <%= devise_error_messages! %>

<div class="form-group">
	<%= f.label :email, :class => "control-label" %><br />
	<%= f.email_field :email, :class => 'form-control', :placeholder => 'test@sampleemail.com' %>
</div>
<div class="actions">
	<%= f.submit "Send me reset password instructions", :class => "btn-u btn-u-blue pull-right" %>
</div>

<% end %>

<%= render "devise/shared/links" %>
